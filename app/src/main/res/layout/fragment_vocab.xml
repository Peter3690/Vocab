<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <tulv.vocab.layout.VocabLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVocab"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
        />

        <TextView
            android:id="@+id/tvEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Good morning"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvVietnamese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Chào buổi sáng"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvPronoun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="/gud 'mɔ:niɳ/"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btRemind"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"

                android:padding="10dp"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/btSpeak"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/soundicon" />
        </LinearLayout>

    </tulv.vocab.layout.VocabLayout>


</LinearLayout>