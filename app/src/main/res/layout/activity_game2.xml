<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Game2Activity"
    android:weightSum="1">

    <TableLayout
        android:shrinkColumns="3"
        android:stretchColumns="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:background="@color/colorGreenToolBar">
            <ImageButton  android:id="@+id/btBack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:layout_column="0"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/iconback"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Điểm: 0"
                android:layout_column="1"
                android:id="@+id/tvScore"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:gravity="center" />



            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvTime"
                android:text="ds"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

        </TableRow>
    </TableLayout>


    <RelativeLayout
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/previous"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btPre"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:src="@drawable/volume3_2"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:background="@null"
            android:layout_height="50dp"
            android:id="@+id/btSpeak"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:src="@drawable/next"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btNext"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <EditText android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtVoCab"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal" />

    <ImageButton android:padding="10dp"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:id="@+id/btSubmit"

      android:background="@null"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/submit3" />



</LinearLayout>