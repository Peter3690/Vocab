            <RelativeLayout
                android:background="@color/colorGreenToolBar"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageButton  android:id="@+id/btBack"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/iconback"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Điểm: 0"
                    android:id="@+id/tvScore"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />



                <TextView
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tvTime"
                    android:text="1:20"


                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_alignTop="@+id/tvScore"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

<!--
        </TableRow>
    </TableLayout>-->


    <RelativeLayout
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/previous"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btPre"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:src="@drawable/volume3_2"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:background="@null"
            android:layout_height="50dp"
            android:id="@+id/btSpeak"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:src="@drawable/next"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btNext"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <EditText android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtVoCab"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal" />

    <ImageButton android:padding="10dp"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:id="@+id/btSubmit"

      android:background="@null"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/submit3" />



</LinearLayout>